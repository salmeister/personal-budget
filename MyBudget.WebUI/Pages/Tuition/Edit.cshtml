@page
@model MyBudget.WebUI.Pages.Tuition.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tuition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tuition.TuitionPk" />
            <div class="form-group">
                <label asp-for="Tuition.TuitionAlias" class="control-label"></label>
                <input asp-for="Tuition.TuitionAlias" class="form-control" />
                <span asp-validation-for="Tuition.TuitionAlias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tuition.FamilyMember" class="control-label"></label>
                <select asp-for="Tuition.FamilyMemberId" class="form-control" asp-items="ViewBag.FamilyMemberId">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="Tuition.FamilyMemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tuition.Institution" class="control-label"></label>
                <select asp-for="Tuition.InstitutionId" class="form-control" asp-items="ViewBag.InstitutionId">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="Tuition.InstitutionId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tuition.Active" /> @Html.DisplayNameFor(model => model.Tuition.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
