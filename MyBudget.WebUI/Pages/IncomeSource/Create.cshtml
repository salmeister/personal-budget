@page
@model MyBudget.WebUI.Pages.IncomeSource.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Income Source</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IncomeSources.IncomeSourceAcro" class="control-label"></label>
                <input asp-for="IncomeSources.IncomeSourceAcro" class="form-control" />
                <span asp-validation-for="IncomeSources.IncomeSourceAcro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncomeSources.IncomeSourceName" class="control-label"></label>
                <input asp-for="IncomeSources.IncomeSourceName" class="form-control" />
                <span asp-validation-for="IncomeSources.IncomeSourceName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IncomeSources.Active" checked="checked"  /> @Html.DisplayNameFor(model => model.IncomeSources.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
