@page
@model MyBudget.WebUI.Pages.Insurance.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Insurance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Insurance.InsurancePk" />
            <div class="form-group">
                <label asp-for="Insurance.InsuranceAlias" class="control-label"></label>
                <input asp-for="Insurance.InsuranceAlias" class="form-control" />
                <span asp-validation-for="Insurance.InsuranceAlias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.InsuranceType" class="control-label"></label>
                <select asp-for="Insurance.InsuranceTypeId" class="form-control" asp-items="ViewBag.InsuranceTypeId"></select>
                <span asp-validation-for="Insurance.InsuranceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.FamilyMember" class="control-label"></label>
                <select asp-for="Insurance.FamilyMemberId" class="form-control" asp-items="ViewBag.FamilyMemberId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="Insurance.FamilyMemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.Property" class="control-label"></label>
                <select asp-for="Insurance.PropertyId" class="form-control" asp-items="ViewBag.PropertyId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="Insurance.PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.Vehicle" class="control-label"></label>
                <select asp-for="Insurance.VehicleId" class="form-control" asp-items="ViewBag.VehicleId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="Insurance.VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Insurance.Active" /> @Html.DisplayNameFor(model => model.Insurance.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
