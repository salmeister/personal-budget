@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="warning-msg">
    This will permantly delete the record from the database. To maintain history, edit the record and update it to be inactive.
</div>
<div>
    <h4>Expense</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expenses.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expenses.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expenses.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expenses.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expenses.ExpenseType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expenses.ExpenseType.ExpenseType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expenses.Month)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expenses.Month.MonthAbbr)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expenses.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expenses.Year.YearPk)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Expenses.ExpensePk" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-month=@Model.Expenses.MonthId asp-route-year=@Model.Expenses.YearId>Back to List</a>
    </form>
</div>
