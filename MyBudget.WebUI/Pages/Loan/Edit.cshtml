@page
@model MyBudget.WebUI.Pages.Loan.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Loans</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Loans.LoanPk" />
            <div class="form-group">
                <label asp-for="Loans.LoanAlias" class="control-label"></label>
                <input asp-for="Loans.LoanAlias" class="form-control" />
                <span asp-validation-for="Loans.LoanAlias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loans.LoanType" class="control-label"></label>
                <select asp-for="Loans.LoanTypeId" class="form-control" asp-items="ViewBag.LoanTypeId"></select>
                <span asp-validation-for="Loans.LoanTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loans.FamilyMember" class="control-label"></label>
                <select asp-for="Loans.FamilyMemberId" class="form-control" asp-items="ViewBag.FamilyMemberId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="Loans.FamilyMemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loans.Property" class="control-label"></label>
                <select asp-for="Loans.PropertyId" class="form-control" asp-items="ViewBag.PropertyId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="Loans.PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loans.Vehicle" class="control-label"></label>
                <select asp-for="Loans.VehicleId" class="form-control" asp-items="ViewBag.VehicleId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="Loans.VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Loans.Active" /> @Html.DisplayNameFor(model => model.Loans.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
